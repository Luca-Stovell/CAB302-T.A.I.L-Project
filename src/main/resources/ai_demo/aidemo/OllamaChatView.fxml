<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ai_demo.aidemo.OllamaJavaFXController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="promptInput" promptText="Enter your prompt here..." HBox.hgrow="ALWAYS" onAction="#handleSendPrompt" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSendPrompt" prefWidth="80.0" text="Send" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TextArea fx:id="responseOutput" editable="false" promptText="AI response will appear here..." wrapText="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
        </TextArea>
    </center>
    <bottom>
        <Label fx:id="statusLabel" text="Ready." BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </Label>
    </bottom>
</BorderPane>
