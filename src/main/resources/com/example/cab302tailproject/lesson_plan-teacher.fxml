<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="dynamicContentBox" maxHeight="Infinity" maxWidth="Infinity" style="-fx-border-color: #000000; -fx-border-width: 0 0 0 0;" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302tailproject.controller.teachercontroller.LessonPlanController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox alignment="CENTER">
        <Label style="-fx-font-size: 20;" text="AAAAAAAAAAAAAAAAAAA" visible="false" fx:id="editableLabel" />
        <TextField alignment="CENTER" promptText="Enter topic name..." style="-fx-font-size: 20;" fx:id="editField" />
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </VBox>

    <VBox alignment="CENTER" prefWidth="510" spacing="15" style="-fx-padding: 0 0 0 0;" VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" prefWidth="440" VBox.vgrow="ALWAYS">
            <TextArea fx:id="generatedTextArea" maxHeight="Infinity" maxWidth="Infinity" minHeight="180" minWidth="200" prefWidth="200" style="-fx-alignment: top-left; -fx-font-size: 16;                       -fx-background-color: #E3E3E3;" wrapText="true" VBox.vgrow="ALWAYS" />
        </VBox>
        <HBox alignment="CENTER" spacing="50">
            <VBox minWidth="120" prefHeight="30" prefWidth="120" style="-fx-padding: 8 0 8 0">
                <Button fx:id="backButton" minWidth="120" onAction="#onBackClicked" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;                          -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;                           -fx-background-radius: 10;" text="Adjust prompt" />
            </VBox>
            <VBox minWidth="120" prefHeight="30" prefWidth="120" style="-fx-padding: 8 0 8 0">
                <Button fx:id="modifyButton" minWidth="120" onAction="#onModifyClicked" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;                          -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;                           -fx-background-radius: 10;" text="Save changes" />
            </VBox>
            <VBox minWidth="120" prefHeight="30" prefWidth="120" style="-fx-padding: 8 0 8 0">
                <Button fx:id="saveToDisk" minWidth="120" onAction="#onSaveClicked" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;                          -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;                           -fx-background-radius: 10;" text="Export" />
            </VBox>
        </HBox>
    </VBox>
</VBox>
