<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="Infinity" maxWidth="Infinity"
      style="-fx-border-color: #000000; -fx-border-width: 0 0 0 0;"
      VBox.vgrow="ALWAYS"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="dynamicContentBox"
      fx:controller="com.example.cab302tailproject.controller.teachercontroller.LessonPlanController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox alignment="CENTER">
        <Label style="-fx-font-size: 20;" text="AAAAAAAAAAAAAAAAAAA" />
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </VBox>

    <VBox alignment="CENTER" prefWidth="510" VBox.vgrow="ALWAYS"
          spacing="15" style="-fx-padding: 0 0 0 0;">
        <VBox alignment="CENTER" prefWidth="440" VBox.vgrow="ALWAYS">
            <TextArea fx:id="generatedTextArea" maxWidth="Infinity" maxHeight="Infinity"
                      minHeight="180" minWidth="200" VBox.vgrow="ALWAYS"
                      prefWidth="200" wrapText="true"
                      style="-fx-alignment: top-left; -fx-font-size: 16;
                      -fx-background-color: #E3E3E3;" />
        </VBox>
        <HBox alignment="CENTER">
            <VBox prefHeight="30" prefWidth="100" style="-fx-padding: 8 0 8 0">
                <Button fx:id="backButton" onAction="#onBackClicked"
                        style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;
                         -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;
                          -fx-background-radius: 10;" text="Back" />
            </VBox>
            <VBox prefHeight="30" prefWidth="100" style="-fx-padding: 8 0 8 0">
                <Button fx:id="modifyButton" onAction="#onModifyClicked"
                        style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;
                         -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;
                          -fx-background-radius: 10;" text="Modify" />
            </VBox>
            <VBox prefHeight="30" prefWidth="100" style="-fx-padding: 8 0 8 0">
                <Button fx:id="saveToDisk" onAction="#onSaveClicked"
                        style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;
                         -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;
                          -fx-background-radius: 10;" text="Save" />
            </VBox>
        </HBox>
    </VBox>
</VBox>
