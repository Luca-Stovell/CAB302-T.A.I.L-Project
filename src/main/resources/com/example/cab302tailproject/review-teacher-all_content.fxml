<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox fx:id="dynamicContentBox" maxHeight="Infinity" maxWidth="Infinity" prefHeight="274.0" prefWidth="510.0"
      style="-fx-border-color: #000000; -fx-border-width: 0 0 0 0;" VBox.vgrow="ALWAYS"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cab302tailproject.controller.teachercontroller.Review.AllContentController_TeachRev">

    <TableView fx:id="tableView" prefHeight="200.0" prefWidth="510.0" maxHeight="Infinity" maxWidth="Infinity" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
          <columns>
              <TableColumn fx:id="weekColumn" prefWidth="75.0" text="Week"/>
              <TableColumn fx:id="topicColumn" prefWidth="140" text="Topic"/>
              <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Type"/>
              <TableColumn fx:id="classroomColumn" prefWidth="75" text="Classroom"/>
              <TableColumn fx:id="lastModifiedColumn" prefWidth="145" text="Last Modified"/>
          </columns>
    </TableView>
    <HBox alignment="CENTER" spacing="50">
        <VBox minWidth="120" prefHeight="30" prefWidth="120" style="-fx-padding: 8 0 8 0">
            <Button fx:id="backButton" minWidth="120" onAction="#onBackClicked" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;
                -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;
                -fx-background-radius: 10;" text="Back" />
        </VBox>
        <VBox minWidth="120" prefHeight="30" prefWidth="120" style="-fx-padding: 8 0 8 0">
            <Button fx:id="viewButton" minWidth="120" onAction="#onViewClicked" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;
            -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;
            -fx-background-radius: 10;" text="View" />
        </VBox>
        <VBox minWidth="120" prefHeight="30" prefWidth="120" style="-fx-padding: 8 0 8 0">
            <Button fx:id="deleteButton" minWidth="120" onAction="#onDeleteClicked" style="-fx-background-color: #E3E3E3; -fx-text-fill:red; -fx-font-size: 16;
                -fx-border-color: #767676; -fx-border-radius: 10; -fx-border-width: 1;
                -fx-background-radius: 10;" text="Delete" />
        </VBox>
    </HBox>

</VBox>
