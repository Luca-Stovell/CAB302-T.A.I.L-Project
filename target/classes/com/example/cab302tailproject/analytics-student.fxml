        <VBox prefHeight="420" prefWidth="50.0" style="-fx-border-color: #000000; -fx-border-width: 2;">
            <Button fx:id="sidebarBackButton" onAction="#onSidebarBackClicked" prefHeight="59.0" prefWidth="112.0" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 12; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="â† Back" />
