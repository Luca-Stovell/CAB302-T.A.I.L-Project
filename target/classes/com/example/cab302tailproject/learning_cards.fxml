<BorderPane maxHeight="-Infinity" prefHeight="420" prefWidth="710" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302tailproject.controller.studentcontroller.LearningCardController">
    <left>
        <VBox prefHeight="420" prefWidth="200" style="-fx-border-color: #000000; -fx-border-width: 2;">
            <VBox alignment="TOP_LEFT" prefHeight="100.0" prefWidth="196.0" style="-fx-padding: 25 0 0 30;">
                <HBox alignment="CENTER_LEFT" prefWidth="200" spacing="20">
                    <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                        <Image url="@../../../images/tail_logo.png" />
                        <clip>
                            <Circle centerX="20" centerY="20" radius="20" />
                        </clip>
                    </ImageView>

                    <VBox alignment="CENTER_LEFT" prefWidth="80">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #757575" text="Max">
                            <font> <Font size="16" /> </font> </Label>            <Label style="-fx-text-fill: #B3B3B3" text="Class 9C">
                        <font> <Font size="16" /> </font> </Label>
                    </VBox>
                </HBox>


                <VBox prefHeight="48.0" prefWidth="166.0">
                    <padding>
                        <Insets bottom="10" left="5" right="5" top="10" />
                    </padding>

                    <Label style="-fx-text-fill: #B3B3B3" text="Week 5">
                        <font> <Font size="12" /> </font> </Label>
                    <Label style="-fx-text-fill: #B3B3B3" text="Time 12:34pm">
                        <font> <Font size="12" /> </font>
                    </Label>
                </VBox>
            </VBox>

            <Button fx:id="sidebarGenerateButton" maxHeight="292.0" minHeight="60" prefHeight="80.0" prefWidth="196.0" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="Lesson Cards" />

            <Button fx:id="sidebarReviewButton" maxHeight="80.0" minHeight="60" onAction="#onSidebarReviewClicked" prefHeight="80.0" prefWidth="196.0" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="Review" />

            <Button fx:id="sidebarAnalysisButton" maxHeight="172.0" minHeight="60" onAction="#onSidebarAnalysisClicked" prefHeight="80.0" prefWidth="196.0" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="Analysis" />

            <Button fx:id="sidebarAiAssistanceButton" maxHeight="125.0" minHeight="60" onAction="#onSidebarAiAssistanceClicked" prefHeight="80.0" prefWidth="196.0" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="A.I Assistance" />
        </VBox>
    </left>


    <center>
        <BorderPane>
            <top>
                <AnchorPane prefHeight="70" prefWidth="510" style="-fx-border-color: #000000; -fx-border-width: 2 2 2 0;">

                    <HBox HBox.hgrow="ALWAYS" />
                    <Label layoutX="20.0" layoutY="11.0" prefHeight="46.0" prefWidth="200.0" text="Lesson Cards">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <Button fx:id="logoutButton" onAction="#logoutButtonClicked" layoutX="510" layoutY="20" prefHeight="30" prefWidth="90" style="-fx-background-color: #2C2C2C; -fx-text-fill: white; -fx-font-size: 14;" text="Logout">
                    </Button>
                </AnchorPane>
            </top>
            <center>
                <Pane prefHeight="365.0" prefWidth="510.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="flipButton" layoutX="219.0" layoutY="238.0" mnemonicParsing="false" onAction="#onFlipClicked" prefHeight="21.0" prefWidth="55.0" style="-fx-background-color: #EEFF00;" text="Flip" />
                        <Button fx:id="easyButton" layoutX="158.0" layoutY="264.0" mnemonicParsing="false" onAction="#onEasyClicked" prefHeight="23.0" prefWidth="46.0" style="-fx-background-color: #00FF22;" text="Easy" />
                        <Button fx:id="hardButton" layoutX="287.0" layoutY="264.0" mnemonicParsing="false" onAction="#onHardClicked" prefHeight="23.0" prefWidth="51.0" style="-fx-background-color: #EC221F;" text="Hard" />
                        <Button fx:id="againButton" layoutX="223.0" layoutY="292.0" mnemonicParsing="false" onAction="#onAgainClicked" prefHeight="21.0" prefWidth="51.0" style="-fx-background-color: #2c2c2c;" text="Again" textFill="#fffdfd" />
                        <Button fx:id="mediumButton" layoutX="211.0" layoutY="264.0" mnemonicParsing="false" onAction="#onMediumClicked" prefHeight="23.0" prefWidth="72.0" text="Medium" />
                        <Button fx:id="nextButton" layoutX="403.0" layoutY="299.0" mnemonicParsing="false" onAction="#onNextClicked" prefHeight="31.0" prefWidth="91.0" text="Next" />
                        <ComboBox fx:id="cardList" layoutX="503.0" layoutY="10" prefHeight="31.0" prefWidth="91.0" promptText="Select Deck" />

                        <TextArea fx:id="cardContent" layoutX="91.0" layoutY="25.0" prefHeight="161.0" prefWidth="325.0" style="-fx-text-alignment: center;" text="ax+b=bx+a" wrapText="true" />
                        <HBox alignment="CENTER" layoutX="158.0" layoutY="320.0" prefWidth="200.0" spacing="20.0">
                            <children>
                                <Button fx:id="correctButton" mnemonicParsing="false" onAction="#onCorrectClicked" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Correct" />
                                <Button fx:id="incorrectButton" mnemonicParsing="false" onAction="#onIncorrectClicked" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Incorrect" />
                            </children>
                        </HBox>
                    </children>
                </Pane>
            </center>

        </BorderPane>
    </center>
</BorderPane>
