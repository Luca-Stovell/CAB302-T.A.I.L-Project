<BorderPane maxHeight="-Infinity" prefHeight="435.0" prefWidth="818.0" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.cab302tailproject.controller.LessonGenController">
    <!-- Left sidebar -->
    <left>
        <VBox prefHeight="420" prefWidth="200" style="-fx-border-color: #000000; -fx-border-width: 2;">
            <!-- user info -->
            <VBox alignment="TOP_LEFT" prefHeight="120" style="-fx-padding: 25 0 0 30;">
                <HBox alignment="CENTER_LEFT" prefWidth="200" spacing="20">
                    <!-- Placeholder user avatar -->
                    <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                        <Image url="@../../../images/tail_logo.png" />
                        <clip>
                            <Circle centerX="20" centerY="20" radius="20" />
                        </clip>
                    </ImageView>

                    <VBox alignment="CENTER_LEFT" prefWidth="80">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #757575" text="Mrs. Liat">
                            <font> <Font size="16" /> </font> </Label>            <!-- change when user DB is implemented -->
                        <Label style="-fx-text-fill: #B3B3B3" text="Class 9C">
                            <font> <Font size="16" /> </font> </Label>
                    </VBox>
                </HBox>


                <!-- Week / time -->
                <VBox>
                    <padding>
                        <Insets bottom="10" left="5" right="5" top="10" />
                    </padding>

                    <Label style="-fx-text-fill: #B3B3B3" text="Week 5">
                        <font> <Font size="12" /> </font> </Label>
                    <Label style="-fx-text-fill: #B3B3B3" text="Time 12:34pm">
                        <font> <Font size="12" /> </font>
                    </Label>
                </VBox>
            </VBox>

            <!-- Navigation sidebar -->

            <Button fx:id="sidebarGenerateButton" maxHeight="60" minHeight="60" prefHeight="60" prefWidth="200" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="Generate" />

            <Button fx:id="sidebarReviewButton" maxHeight="60" minHeight="60" prefHeight="60" prefWidth="200" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="Review" />

            <Button fx:id="sidebarAnalysisButton" maxHeight="60" minHeight="60" prefHeight="60" prefWidth="200" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="Analysis" />

            <Button fx:id="sidebarAiAssistanceButton" maxHeight="60" minHeight="60" prefHeight="60" prefWidth="200" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="A.I. Assistance" />

            <Button fx:id="sidebarLibraryButton" maxHeight="60" minHeight="60" prefHeight="60" prefWidth="200" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16;-fx-border-color: #000000; -fx-border-width: 1 0 0 0;" text="Library" />
        </VBox>
    </left>


    <center>
        <BorderPane>
            <!-- Top Navigation Bar -->
            <top>
                <AnchorPane prefHeight="70" prefWidth="510" style="-fx-border-color: #000000; -fx-border-width: 2 2 2 0;">
                    <Button fx:id="filesButton" layoutX="85.0" layoutY="15.0" prefHeight="40" prefWidth="100" style="-fx-background-color: #111d29; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 10;" text="Files" />
                    <Button fx:id="studentsButton" layoutX="260" layoutY="15" prefHeight="40" prefWidth="115" style="-fx-background-color: #111d29; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 10;" text="Students" textFill="#111d29" />

                    <HBox HBox.hgrow="ALWAYS" /> <!-- spacer -->

                    <Button fx:id="homeButton" layoutX="420" layoutY="20" onAction="#onHomeClicked" prefHeight="30" prefWidth="30" style="-fx-background-color: #2C2C2C; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 50;" text="H">
                        <!-- insert graphic here-->
                    </Button>
                    <Button fx:id="settingsButton" layoutX="482.0" layoutY="20.0" prefHeight="30" prefWidth="30" style="-fx-background-color: #2C2C2C; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 50;" text="S">
                        <!-- insert graphic here-->
                    </Button>
                </AnchorPane>
            </top>

            <!-- Main content/current program window -->
            <center>
                <VBox alignment="TOP_CENTER" prefHeight="404.0" prefWidth="507.0" style="-fx-border-color: #000000; -fx-border-width: 0 2 2 0;">
                    <VBox alignment="CENTER" style="-fx-padding: 20 20 20 20;">
                  <ImageView fitHeight="73.0" fitWidth="89.0" pickOnBounds="true" preserveRatio="true" />
                        <Label style="-fx-font-size: 20;" text="What would you like to generate?" />
                    </VBox>

                    <HBox alignment="CENTER" prefWidth="510" spacing="50">
                        <VBox prefWidth="175">
                            <RadioButton fx:id="worksheetRadioButton" selected="true" style="-fx-font-size: 16;" text="Worksheet" textFill="#111d29">
                        <toggleGroup>
                           <ToggleGroup fx:id="generateToggleGroup" />
                        </toggleGroup></RadioButton>
                            <Label style="-fx-text-fill: #757575; -fx-font-size: 16; -fx-padding: 0 0 0 27;" text="Create a worksheet for your students" wrapText="true" />
                        </VBox>
                        <VBox prefWidth="175">
                            <RadioButton fx:id="lessonPlanRadioButton" style="-fx-font-size: 16;" text="Lesson Plan" toggleGroup="$generateToggleGroup" />
                            <Label style="-fx-text-fill: #757575; -fx-font-size: 16; -fx-padding: 0 0 0 27;" text="Create a lesson plan" />
                        </VBox>
                    </HBox>

                    <VBox alignment="CENTER" prefWidth="510" spacing="15" style="-fx-padding: 20 0 0 0;">
                        <VBox alignment="CENTER" prefWidth="400">
                            <TextField fx:id="generatorTextField" prefHeight="150" prefWidth="350" promptText="Enter prompt here..." style="-fx-alignment: top-left; -fx-font-size: 16; -fx-background-color: #E3E3E3;" />
                        </VBox>
                         <Button fx:id="generateButton" style="-fx-background-color: #E3E3E3; -fx-text-fill:black; -fx-font-size: 16; -fx-border-color: #000000; -fx-border-width: 1;" text="Generate" />
                        <VBox alignment="CENTER" prefHeight="30.0" prefWidth="581.0" />
                    </VBox>

                </VBox>
            </center>

        </BorderPane>
    </center>






</BorderPane>
